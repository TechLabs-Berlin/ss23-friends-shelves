<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit <%= book.title %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/books/<%=book.id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input class="form-control" type="text" id="title" name="book[title]" value="<%= book.title%>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input class="form-control" type="text" id="author" name="book[author]" value="<%= book.author%>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="isbn" class="form-label">ISBN</label>
                    <input class="form-control" type="text" id="isbn" name="book[isbn]" value="<%= book.isbn%>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input class="form-control" type="text" id="image" name="book[image]" value="<%= book.image%>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class=" mb-3">
                    <label for="blurb" class="form-label">Blurb</label>
                    <textarea class="form-control" type="text" id="blurb" name="book[blurb]"
                        required><%= book.blurb%></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Book</button>
                </div>
            </form>
        </div>
    </div>