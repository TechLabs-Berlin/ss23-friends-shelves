<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="row">
        <div class="col-6">

            <div class="card mb-3">
                <img src="<%= book.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= book.title %>
                    </h5>
                    <p class="card-text">
                        <%= book.blurb %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        by <%= book.author %>
                    </li>
                    <li class="list-group-item">
                        ISBN: <%= book.isbn %>
                    </li>
                </ul>
                <% if ( currentUser && book.owner.equals(currentUser._id)) { %>
                    <div class="card-body">
                        <a href="/books/<%= book._id %>/edit" class="card-link btn btn-info">Edit</a>
                        <form class="d-inline" action="/books/<%= book._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-warning">Delete</button>
                        </form>
                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            <p>Uploaded by <%= book.owner.username %>
                            </p>
                            <p>contact <%= book.owner.username %> at <%= book.owner.email %>
                            </p>
                        </div>
            </div>
        </div>
        <div class="col-6">

            <h2>Leave a Review</h2>
            <form action="/books/<%=book._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <div class="">
                    <fieldset class="starability-basic">
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" checked />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <button class="btn btn-success">Submit Review</button>
            </form>
            <% for(let review of book.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=review.writer.username%>
                        </h5>
                        <p class="starability-result" data-rating="<%= review.rating %>">
                            Rated: <% review.rating %> stars
                        </p>
                        <p class="card-text">
                            Review: <%= review.body %>
                        </p>
                        <% if ( currentUser && review.writer.equals(currentUser._id)) { %>
                            <form class="d-inline" action="/books/<%=book._id%>/reviews/<%=review._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>